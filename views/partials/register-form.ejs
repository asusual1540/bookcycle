<form class="signup-form" action="/signup" method="POST">
	<div class="form-group">
		<input type="email" class="form-control" id="user-email" placeholder="Email address">
	</div>
	<div class="form-group">
		<input type="password" class="form-control" id="user-password" placeholder="Password">
	</div>
	<div class="form-group">
		<input type="password" class="form-control" id="user-confirm-password" placeholder="Confirm Password">
	</div>
	<div class="form-group">
		<button type="submit" class="btn bookcycle-btn">Login</button>
	</div>
</form>
